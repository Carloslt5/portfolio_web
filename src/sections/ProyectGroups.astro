---
import Title from "@components/ui/Title.astro"
import { SectionIds } from "@const/menuItems"
import { proyectGroupContent } from "@const/portfolioData"
import { Image } from "astro:assets"
import { getCollection } from "astro:content"

const proyects = await getCollection("proyects")
---

<section class="bg-re mt-20" id={SectionIds.PROJECT_GROUP}>
  <Title title={proyectGroupContent.title} />
  <div class="flex flex-row flex-wrap items-center justify-center">
    <div
      class="group aspect-square w-full cursor-pointer overflow-hidden bg-woodsmoke-900 sm:w-1/2 md:w-1/3"
    >
      <div
        class="flex h-full transform items-center justify-center bg-woodsmoke-900 transition-transform duration-300 ease-in-out group-hover:scale-105"
      >
        <h3 class="text-xl text-white">{proyectGroupContent.callToAction}</h3>
      </div>
    </div>
    {
      proyects
        .sort((a, b) => b.data.order - a.data.order)
        .map(({ data: { mainImg, title } }) => {
          return (
            <div class="group relative aspect-square w-full cursor-pointer overflow-hidden bg-woodsmoke-200 sm:w-1/2 md:w-1/3">
              <Image
                src={mainImg}
                alt={title}
                format="webp"
                class="transform transition-transform duration-300 ease-in-out md:grayscale md:group-hover:scale-105 md:group-hover:grayscale-0"
              />
              <div class="absolute bottom-0 left-0 px-4 pb-3 transition-all duration-300 ease-in-out group-hover:translate-y-0 md:translate-y-16">
                <h3 class="text-xl lg:text-2xl">{title}</h3>
              </div>
            </div>
          )
        })
    }
  </div>
</section>
