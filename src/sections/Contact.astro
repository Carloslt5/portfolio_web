---
import FormContainer from "@components/ui/FormContainer.astro"
import { SectionIds } from "@const/menuItems"
---

<section class="px-4 py-10" id={SectionIds.CONTACT}>
  <div class="mx-auto flex max-w-screen-2xl items-center justify-between gap-6 py-2">
    <div class="w-2/3 rounded-md bg-woodsmoke-950 p-6">
      <FormContainer />
    </div>
    <div class="w-1/3">
      <!-- Phone Block -->
      <div class="contact__block text-center">
        <a
          href="https://wa.me/34697461996"
          target="_blank"
          title="Whatsapp"
          class="mb-2 inline-block"
        >
          <svg
            class="contact__icon mx-auto h-12 w-12"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 200 200"
          >
            <path d="M41.72 0c3.95.86 7.75 2.07 10.92..."></path>
          </svg>
        </a>
        <p class="contact__title text-lg font-semibold">TELÉFONO MÓVIL</p>
        <h4 class="contact__h4 text-xl font-bold">+34 697 46 19 96</h4>
        <p class="contact__text text-sm text-gray-600">Zona horaria de Madrid (GMT+1).</p>
      </div>

      <!-- Location Block -->
      <div class="contact__block text-center">
        <a
          href="https://www.google.es/maps/place/Madrid/..."
          target="_blank"
          title="Madrid"
          class="mb-2 inline-block"
        >
          <svg
            class="contact__icon mx-auto h-12 w-12"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 200 200"
          >
            <path d="M101.56 200h-3.12c-1.45-1.06-3.02..."></path>
          </svg>
        </a>
        <p class="contact__title text-lg font-semibold">LOCALIDAD</p>
        <h4 class="contact__h4 text-xl font-bold">MADRID, ESPAÑA</h4>
        <p class="contact__text text-sm text-gray-600">
          Para reuniones o entrevistas presenciales.
        </p>
      </div>

      <!-- Email Block -->
      <div class="contact__block text-center">
        <a
          href="mailto:carlos.lt97@gmail.com"
          target="_blank"
          title="email"
          class="mb-2 inline-block"
        >
          <svg
            class="contact__icon mx-auto h-12 w-12"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 200 200"
          >
            <path d="M200 67.19v91.8c-.07.1-.19..."></path>
          </svg>
        </a>
        <p class="contact__title text-lg font-semibold">CONTACTO</p>
        <div class="icon_rrss mt-4 flex justify-center space-x-4">
          <a href="https://github.com/Carloslt5" target="_blank" title="GitHub">
            <svg
              class="contact__icon h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 200 200"
            >
              <path d="M200,108.2c-.51,3.73-.81,7.49..."></path>
            </svg>
          </a>
          <a href="https://www.linkedin.com/in/carlos-liao" target="_blank" title="Linkedin">
            <svg
              class="contact__icon h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 200 200"
            >
              <path d="M106,200H93.57c-2.44-.3-4.88..."></path>
            </svg>
          </a>
          <a
            href="https://drive.google.com/file/d/1JHfI8BdA_xX1Zd3odD74jO68ap8UuiB-/view?usp=sharing"
            target="_blank"
            title="CV"
          >
            <svg
              class="contact__icon h-6 w-6"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 200 200"
            >
              <path d="M99.82 66.32a12.75 12.75 0..."></path>
            </svg>
          </a>
        </div>
        <p class="contact__text text-sm text-gray-600">Escríbeme, hablemos.</p>
      </div>
    </div>
  </div>
</section>
