---
import "@styles/styles.css"

interface Props {
  title: string
  description?: string
  image?: string
}
const { title } = Astro.props
---

<head>
  <!-- Global Metadata -->
  <meta charset="UTF-8" />
  <meta name="description" content="Astro description" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />

  <!-- Font Preloads -->
  <link rel="preload" href="/fonts/Montserrat-Thin.ttf" as="font" type="font/ttf" crossorigin />
  <link rel="preload" href="/fonts/Montserrat-Regular.ttf" as="font" type="font/ttf" crossorigin />
  <link
    rel="preload"
    href="/fonts/Montserrat-ExtraBold.ttf"
    as="font"
    type="font/ttf"
    crossorigin
  />

  <!-- Primary Meta Tags -->
  <title>{title}</title>

  <!-- Open Graph -->
</head>
