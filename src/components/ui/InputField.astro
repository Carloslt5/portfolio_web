---
export type InputType = "text" | "email" | "password" | "number"

type Props = {
  id: string
  name: string
  placeholder: string
  required?: boolean
  type: InputType
}

const { type, name, id, required, placeholder } = Astro.props
---

<input
  type={type}
  name={name}
  id={id}
  class="focus:bg-woodsmoke-50 focus:text-woodsmoke-700 w-full overflow-hidden border-b bg-transparent p-3 text-white focus:rounded-sm"
  required={required}
  placeholder={placeholder}
/>
