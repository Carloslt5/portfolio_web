---
type Props = {
  title: string
}

const { title } = Astro.props
---

<header class="mx-auto mb-20 flex items-center justify-center text-center uppercase">
  <h1
    class="shadow-text relative mb-0 text-[clamp(2rem,10vw,6em)] leading-[40px] font-extrabold text-white sm:leading-[80px]"
  >
    {title}
  </h1>
  <h3 class="absolute mb-0 text-[clamp(1em,8vw,3em)] font-extrabold text-black">{title}</h3>
</header>

<style>
  .shadow-text {
    text-shadow:
      0 0 1px black,
      -1px -1px 0 black,
      1px -1px 0 black,
      -1px 1px 0 black,
      1px 1px 0 black;
  }
</style>
