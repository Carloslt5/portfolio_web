---
import ContactBlock from "@components/ui/ContactBlock.astro"
import FormContainer from "@components/ui/FormContainer.astro"
import RenderSocialMediaLink from "@components/ui/RenderSocialMediaLink.astro"
import { SectionIds } from "@const/menuItems"
import { contactContent } from "@const/portfolioData"
import { SocialMedia } from "@const/socialMedia"

const contactInfo = [SocialMedia.GITHUB, SocialMedia.LINKEDIN, SocialMedia.CV]
---

<section class="px-4 py-24" id={SectionIds.CONTACT}>
  <div
    class="mx-auto flex max-w-screen-2xl flex-col items-stretch justify-between gap-6 py-2 md:flex-row"
  >
    <div class="w-full rounded-md bg-woodsmoke-950 p-6 md:w-2/3">
      <FormContainer />
    </div>
    <div
      class="flex flex-col items-center justify-center gap-3 md:w-1/3 md:flex-col md:justify-between"
    >
      {
        contactContent.contact.map((block) => (
          <ContactBlock
            title={block.title}
            subtitle={block.subtitle}
            text={block.text}
            link={block.link}
            icon={block.icon}
          >
            {block.title === "CONTACTO" && (
              <div class="flex w-full items-center justify-around">
                <RenderSocialMediaLink info={contactInfo} class="text-black opacity-100" />
              </div>
            )}
          </ContactBlock>
        ))
      }
    </div>
  </div>
</section>
