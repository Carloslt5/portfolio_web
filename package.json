{
  "description": "Personal portfolio made with Astro and TailwindCSS",
  "repository": {
    "type": "git",
    "url": "https://github.com/Carloslt5/portfolio_web"
  },
  "keywords": [
    "astro",
    "portafolio",
    "tailwindcss",
    "typescript"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "name": "personal-portfolio-web",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "eslint": "eslint src",
    "eslint:fix": "eslint --fix src",
    "prettier": "prettier --check src \"**/*.{js,ts,tsx,astro}\"",
    "prettier:fix": "prettier --write src \"**/*.{js,ts,tsx,astro}\"",
    "fix": "npm run eslint:fix && npm run prettier:fix",
    "git:pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "(src)/**/*.(ts|tsx|astro)": [
      "npm run eslint",
      "npm run prettier"
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^5.1.2",
    "@astrojs/ts-plugin": "^1.10.2",
    "@astrolib/seo": "^1.0.0-beta.8",
    "@heroicons/react": "^2.1.5",
    "astro": "^4.16.2",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@tailwindcss/typography": "^0.5.15",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-plugin-astro": "^1.2.4",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.11.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.10",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "typescript-eslint": "^8.8.1"
  }
}